    <BasicDropdown
      @class="popup-menu"
      @horizontalPosition="auto-right"
      @verticalPosition="below"
      as |D|
    >
      <D.trigger
        @class={{concat "calendar-widget-dropdown" (if D.isOpen " is-active")}}
        @tagName="button"
      >
        {{this.startMonthRange}} - {{this.endMonthRange}}
        <Chevron @direction={{if D.isOpen "up" "down"}} @isButton={{true}} /> 
      </D.trigger>
      <D.content @class="popup-menu-content">
        <div class="calendar-widget-container">
            <div class="select-year">
                <p>{{this.displayYear}}</p>
                <div class="icon-container">
                    <button type="button" class="button is-transparent" {{on "click" this.subYear}}>
                        <Chevron @direction="left" @size="s" class="has-text-grey" />
                    </button>
                    <button type="button" class="button is-transparent" {{on "click" this.addYear}}>
                        <Chevron @direction="right" @size="s" class="has-text-grey" />
                    </button>
                </div>
            </div>
            <div class="select-months">SELECT MONTHS</div>
            <div class="calendar-widget-grid calendar-widget">
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-january" >January</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-february">February</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-march">March</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-april">April</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-may">May</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-june">June</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-july">July</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-august">August</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-september">September</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-october">October</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-november">November</div>
                <div {{on "click" this.selectMonth}} class="is-not-selected" id="month-december">December</div>
            </div>
            <div class="border-col"></div>
            <div class="calendar-widget-nav month-nav">
                <ul>
                    <li class={{if isActive " is-active"}} {{on "click" this.selectMonths}}>Last month</li>
                    <li class={{if isActive " is-active"}} {{on "click" this.selectMonths}}>Last 3 months</li>
                    <li class={{if isActive " is-active"}} {{on "click" this.selectMonths}}>Last 6 months</li>
                    <li class={{if isActive " is-active"}} {{on "click" this.selectMonths}}>Last 12 months</li>
                </ul>
            </div>
        </div>
      </D.content>
    </BasicDropdown>
